            [1, 0, 0],
            [0, 1, 0],
            [0, 0, 1]
        ],
        "translation_vector": [0, 0, 0]
    },
    "ball_detection": {
        "hsv_low_h": 25,
        "hsv_low_s": 50,
        "hsv_low_v": 50,
        "hsv_high_h": 65,
        "hsv_high_s": 255,
        "hsv_high_v": 255,
        "frame_diff_threshold": 30,
        "min_contour_area": 50,
        "use_color_detection": true,
        "use_hough_detection": false,
        "hough_dp": 1,
        "hough_min_dist": 20,
        "hough_param1": 50,
        "hough_param2": 30,
        "hough_min_radius": 5,
        "hough_max_radius": 50
