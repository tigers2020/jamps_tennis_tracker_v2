{
    "ui": {
        "theme": "fusion",
        "language": "en",
        "window_width": 1200,
        "window_height": 800
    },
    "camera": {
        "default_azimuth": 0.0,
        "default_elevation": 0.0,
        "default_distance": 10.0
    },
    "camera_parameters": {
        "baseline": 0.1,
        "focal_length": 1000,
        "principal_point": [320, 240],
